{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es5", "es6", "dom", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "driver/types/*"]
    }
  },
  "include": ["driver/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
